<UserControl x:Class="TaskManager.Presentation.NotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300"
             Height="100">
    <Border Background="LightBlue" BorderBrush="DarkBlue" BorderThickness="1"  CornerRadius="10" Padding="10">
        <StackPanel>
            <TextBlock x:Name="TitleText" FontWeight="Bold" FontSize="16"/>
            <TextBlock x:Name="MessageText" FontSize="14"/>
        </StackPanel>
    </Border>
</UserControl>